{
  "author": "daniel@woss.io",
  "name": "root",
  "private": true,
  "workspaces": [
    "sdk/*",
    "operations/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/sensio_group/network-js-sdk.git"
  },
  "bugs": {
    "url": "https://gitlab.com/sensio_group/network-js-sdk/issues"
  },
  "homepage": "https://gitlab.com/sensio_group/network-js-sdk#readme",
  "license": "Apache-2.0",
  "scripts": {
    "boot": "lerna bootstrap",
    "lint": "eslint '*/**/*.{js,ts}' .",
    "lint:fix": "prettier --config .prettierrc './**/*.ts' --write",
    "build": "lerna run build",
    "test": "clear && jest --config jest.config.js --runInBand --detectOpenHandles",
    "test:watch": "yarn test --watchAll",
    "test:coverage": "jest --runInBand --coverage",
    "clean": "yarn lerna clean",
    "clean:all": "yarn clean && yarn clean:root-node-modules && yarn clean:lib",
    "clean:lib": "yarn clean:lib-dir && yarn clean:lib-tsinfo",
    "clean:lib-dir": "find . -name 'lib' -type d -prune -print -exec rm -rf '{}' \\;",
    "clean:lib-tsinfo": "find . -name 'tsconfig.tsbuildinfo' -type f -prune -print -exec rm -rf '{}' \\;",
    "clean:root-node-modules": "rm -rf node_modules",
    "docs": "yarn typedoc --sourcefile-url-prefix \"https://gitlab.com/sensio_group/network-js-sdk/-/tree/master/\"",
    "core": "yarn workspace @sensio/core",
    "api": "yarn workspace @sensio/api",
    "cli": "yarn workspace @sensio/cli",
    "types": "yarn workspace @sensio/types",
    "postinstall": "yarn boot && ./remove-console-log-from-polkadot-logger.sh"
  },
  "engines": {
    "node": ">12"
  },
  "dependencies": {
    "@types/jest": "^26.0.17",
    "@types/node": "^14.14.10",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "babel-eslint": "^10.1.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.3.5",
    "jest": "^26.6.3",
    "kind-of": "^6.0.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.0.0-pre.49",
    "tsconfig-paths": "^3.9.0",
    "typedoc": "^0.19.2",
    "typedoc-plugin-lerna-packages": "^0.3.1",
    "typedoc-plugin-sourcefile-url": "^1.0.6",
    "typescript": "^4.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "resolutions": {
    "typedoc": "^0.19.2"
  }
}
