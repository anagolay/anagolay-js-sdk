{
  "author": "daniel@woss.io",
  "private": true,
  "name": "root",
  "workspaces": [
    "sdk/*",
    "operations/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/sensio_group/network-js.git"
  },
  "bugs": {
    "url": "https://gitlab.com/sensio_group/network-js/issues"
  },
  "homepage": "https://gitlab.com/sensio_group/network-js#readme",
  "license": "Apache-2.0",
  "scripts": {
    "boot": "lerna bootstrap",
    "std": "lerna run --parallel --stream std",
    "build": "lerna run build",
    "test": "clear && jest --runInBand --no-cache",
    "test:watch": "yarn test --watch",
    "test:coverage": "jest --runInBand --coverage",
    "demo": "ts-node-dev -r tsconfig-paths/register  --cls --respawn --watch ./examples/demo/src/**/*  --inspect  -- ./examples/demo/src/index.ts",
    "demo:ops": "ts-node-dev -r tsconfig-paths/register  --cls --respawn --watch ./examples/demo/src/**/*  --inspect  -- ./examples/demo/src/index.ts ops",
    "demo:woss": "ts-node-dev -r tsconfig-paths/register  --cls --respawn --files --debug --transpileOnly --watch ./examples/woss/src/**/* -- ./examples/woss/src/index.ts",
    "benchmark": "lerna run bench --scope benchmark",
    "clean": "yarn lerna clean",
    "clean:all": "yarn clean && yarn clean:lib && clean:root-node-modules",
    "clean:lib": "yarn clean:lib-dir && yarn clean:lib-tsinfo",
    "clean:lib-dir": "find . -name 'lib' -type d -prune -print -exec rm -rf '{}' \\;",
    "clean:lib-tsinfo": "find . -name 'tsconfig.tsbuildinfo' -type f -prune -print -exec rm -rf '{}' \\;",
    "clean:root-node-modules": "find . -name 'node_modules' -type d -prune -print -exec rm -rf '{}' \\;",
    "postinstall": "yarn boot",
    "cli:regen-default-ops": "cd sdk/cli && yarn start regen-default-ops && cd ../../ && yarn std",
    "cli:regen-custom-ops": "cd sdk/cli && yarn start regen-custom-ops && cd ../../ && yarn std",
    "lerna:publish": "export GPG_TTY=$TTY && yarn lerna publish",
    "docs": "yarn typedoc --sourcefile-url-prefix \"https://gitlab.com/sensio_group/network-js/-/tree/master/\"",
    "core": "yarn workspace @sensio/core",
    "api": "yarn workspace @sensio/api",
    "cli": "yarn workspace @sensio/cli",
    "types": "yarn workspace @sensio/types"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn std",
      "pre-push": "yarn test"
    }
  },
  "engines": {
    "node": ">12"
  },
  "dependencies": {
    "@types/jest": "^26.0.4",
    "@types/node": "^14.0.14",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "babel-eslint": "^10.1.0",
    "concurrently": "^5.2.0",
    "eslint": "^7.3.1",
    "eslint-config-standard-jsx": "^8.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-config-standard-with-typescript": "18",
    "eslint-plugin-import": "2",
    "eslint-plugin-node": "11",
    "eslint-plugin-promise": "4",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-standard": "4",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "kind-of": "^6.0.3",
    "lerna": "^3.22.1",
    "standard-version": "^8.0.0",
    "standardx": "^5.0.0",
    "ts-jest": "^26.1.1",
    "ts-node-dev": "^1.0.0-pre.49",
    "tsconfig-paths": "^3.9.0",
    "typedoc": "^0.17.8",
    "typedoc-plugin-lerna-packages": "^0.3.1",
    "typedoc-plugin-sourcefile-url": "^1.0.6",
    "typescript": "^3.9.5"
  },
  "standardx": {
    "parser": "babel-eslint"
  }
}
